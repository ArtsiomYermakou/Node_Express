<h1>Basket</h1>

{{#if courses.length}}

    <div id="card">


        <table>
            <thead>
            <tr>
                <th>Course name</th>
                <th>Count</th>
                <th>Events</th>
            </tr>
            </thead>
            <tbody>

            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Price:</strong><span class="price">{{price}}</span></p>
    </div>
{{else}}

{{/if}}
<h1>Change {{course.title}}</h1>

<form action="/courses/edit" method="POST">

    <div class="input-field">
        <input name="title" placeholder="Course name" id="title" type="text" class="validate" required
               value="{{course.title}}">
        <span class="helper-text" data-error="Enter name course..."></span>
    </div>

    <div class="input-field">
        <input name="price" placeholder="Price course" id="price" type="number" class="validate" required min="1"
               value="{{course.price}}">
        <span class="helper-text" data-error="Enter price..."></span>
    </div>

    <div class="input-field">
        <input name="img" placeholder="URL image" id="img" type="text" class="validate" required value="{{course.img}}">
        <span class="helper-text" data-error="Enter URL image..."></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Change</button>

</form>